# PostgreSQL-Verbindung für die API
DATABASE_URL=postgres://maxcloud:maxcloud@localhost:5432/maxcloud?sslmode=disable

# PostgreSQL-Verbindung für Integrationstests
TEST_DATABASE_URL=postgres://maxcloud:maxcloud@localhost:5432/maxcloud?sslmode=disable

# API Server
PORT=8080
DEV_MODE=false
DEV_ORG_UID=

# Knative/Kubernetes
KUBECONFIG=
KNATIVE_NAMESPACE=default
RECONCILE_INTERVAL=5s

# Email (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@maxcloud.dev
INVITE_EXPIRATION=168h

# Docker Registry
REGISTRY_URL=registry.maxcloud.dev
REGISTRY_JWT_SECRET=your-256-bit-secret-here
REGISTRY_TOKEN_EXPIRY=1h
